<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/pregnancyjishiben_list_selector" >


    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/selectedTag"
         >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/deleteTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:background="@drawable/bill_red_delete_selector"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16dp" 
            android:clickable="true"
            android:visibility="gone"/>
        
    </RelativeLayout>

    <ImageView
        android:id="@+id/selectedTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bill_account_bizhong_checked" 
        />
    
    
    
</RelativeLayout>




