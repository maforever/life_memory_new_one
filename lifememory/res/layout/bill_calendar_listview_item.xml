<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/bill_calendar_empty_selector"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_spend"
             />

        <TextView
            android:id="@+id/catagoryName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/icon"
            android:textColor="#000000"
            android:text="slkdjflsjfslajfslkjflsjflsdajkf"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/accountName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/catagoryName"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaa"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="333333333333333"
            android:maxLength="10"
            android:singleLine="true"
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>